CREATE OR REPLACE FUNCTION func_tracker_designer_receive_order_fabric(
    IN v_order_id integer,
    IN v_custom_order_id integer,
    IN v_customized character,
    OUT output_msg text,
    OUT id integer)
  RETURNS record AS
$BODY$
BEGIN
                          IF v_customized='Y' THEN
                                UPDATE tracker_custom_orders_fabric SET designer_received='Y', designer_received_date=current_timestamp
                                WHERE fabric_custom_order_id =v_custom_order_id;
                                output_msg:='Successfully';
                        ELSE
                                UPDATE tracker_orders_fabric SET designer_received='Y', designer_received_date=current_timestamp
                                WHERE order_id =v_order_id;
                                output_msg:='Successfully';

                        END IF;



END
$BODY$
  LANGUAGE plpgsql;
