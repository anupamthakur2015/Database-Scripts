CREATE TABLE TRACKER_REQUISITION_EMBROIDERY
(
	embrd_requisition_id serial NOT NULL UNIQUE,
	issue_min_date date NOT NULL,
	issue_max_date date NOT NULL,
	transaction_id varchar(100) NOT NULL,
	delivery_min_date date NOT NULL,
	delivery_max_date date NOT NULL,
	category_name text NOT NULL,
	style_code varchar(50) NOT NULL,
	designer_code varchar(20) NOT NULL,
	color_code varchar(10) NOT NULL,
	product_codes varchar(500) NOT NULL,
	item_code varchar(50) NOT NULL,
	production_types varchar(200) NOT NULL,
	embrd_total_metre float NOT NULL,
	embrd_total_pcs int NOT NULL,
	embrd_total_set int NOT NULL,
	embrd_total_line float NOT NULL,
	embrd_total_length_inch1 float NOT NULL,
	embrd_total_width_inch2 float NOT NULL,
	embrd_total_height_inch3 float NOT NULL,
	embrd_total_measurement float NOT NULL,
	embrd_code varchar(20) NOT NULL,
	embrd_desc text NOT NULL,
	embrd_std_unit text NOT NULL,
	fabric_name varchar(100) NOT NULL,
	fabric_base_colour varchar(10) NOT NULL,
	material_reference text,
	sc_planning_main_item_id int NOT NULL,
	style_ccode_id int NOT NULL,
	sc_asis_plan_embrd_item_id int NOT NULL,
	sc_custom_plan_embd_item_id int,
	sc_custom_dept_plan_emrd_item_id int,
	sc_custom char(1) NOT NULL,
	sc_dept_changed char(1) NOT NULL,
	approved char(1),
	actual_issue_date timestamp,
	PRIMARY KEY (embrd_requisition_id)
) WITHOUT OIDS;
