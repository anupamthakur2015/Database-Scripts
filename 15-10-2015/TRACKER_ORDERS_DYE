CREATE TABLE TRACKER_ORDERS_DYE
(
order_id serial NOT NULL UNIQUE,
dye_order_no varchar(500) NOT NULL,
dye_requisition_id int NOT NULL,
dye_custom_requisition_id int,
issued char(1),
issued_date timestamp,
customized char(1),
delivered char(1),
actual_delivery_date timestamp,

department_returned char(1),
department_rejected char(1),
department_to_repair_redo char(1),
department_not_accepted_reason text,
department_not_accepted_date timestamp,

designer_received char(1),
designer_received_date timestamp,
designer_rejected char(1),
designer_returned char(1),
designer_not_accepted_reason text,
re_issue char(1),
parent_order_id int,
PRIMARY KEY (order_id)
) WITHOUT OIDS;
