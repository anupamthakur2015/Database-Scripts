DROP VIEW VW_TRACKER_REQUISITION_PRINT;
CREATE OR REPLACE VIEW VW_TRACKER_REQUISITION_PRINT
AS
SELECT * 
FROM 
(
	select 
	category_planning_id, 
	product_codes, 
	production_type, 
	plan_item_code, 
	vw_req_print.transaction_id, 
	category_name, 
	style_code, 
	color_code, 
	PRINT_code, 
	printing_type, 
	print_colour,
	num_screens_blocks,
	num_colours,
	Issue_Min_Date,
	Issue_Max_Date,
	Delivery_Min_Date,
	Delivery_Max_Date,
	(PRINT_Total_Length_Metre - COALESCE(print_length,0)) AS PRINT_Total_Length_Metre,
	(PRINT_Total_Width_Inch - COALESCE(print_width,0)) AS PRINT_Total_Width_Inch,
	(PRINT_Total_Pcs - COALESCE(print_pcs,0)) AS PRINT_Total_Pcs,
	(vw_req_print.PRINT_Total_Measurement - COALESCE(req_print.print_total_measurement,0)) AS PRINT_Total_Measurement,
	sc_planning_main_item_id, style_ccode_id, sc_asis_plan_PRINT_item_id, cat_custom_plan_PRINT_item_id,sc_custom_dept_plan_PRINT_item_id,
	custom, cat_custom_dept_changed,asis_dept_changed
	from 
	(
		select  category_planning_id, product_codes, production_type, plan_item_code, transaction_id, category_name, style_code, color_code, PRINT_code, printing_type, print_colour,num_screens_blocks,num_colours,
		(CASE 
		WHEN custom='N' THEN PRINT_issue_min_date 
		WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_PRINT_issue_min_date
		WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_PRINT_issue_min_date
		END) AS Issue_Min_Date,
		(CASE 
		WHEN custom='N' THEN PRINT_issue_max_date 
		WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_PRINT_issue_max_date
		WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_PRINT_issue_max_date
		END) AS Issue_Max_Date,
		(CASE 
		WHEN custom='N' THEN PRINT_delivery_min_date 
		WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_PRINT_delivery_min_date
		WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_PRINT_delivery_min_date
		END) AS Delivery_Min_Date,
		(CASE 
		WHEN custom='N' THEN PRINT_delivery_max_date 
		WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_PRINT_delivery_max_date
		WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_PRINT_delivery_max_date
		END) AS Delivery_Max_Date,
		(CASE 
		WHEN custom='N' THEN asis_PRINT_total_length_metre 
		WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_PRINT_total_length_metre
		WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_PRINT_total_length_metre
		END) AS PRINT_Total_Length_Metre,
		(CASE 
		WHEN custom='N' THEN asis_PRINT_total_width_inch 
		WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_PRINT_total_width_inch
		WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_PRINT_total_width_inch
		END) AS PRINT_Total_Width_Inch,
		(CASE 
		WHEN custom='N' THEN asis_PRINT_total_pcs 
		WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_PRINT_total_pcs
		WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_PRINT_total_pcs
		END) AS PRINT_Total_Pcs,
		(CASE 
		WHEN custom='N' THEN asis_PRINT_total_measurement 
		WHEN custom='Y' AND cat_custom_dept_changed='N' THEN cat_custom_PRINT_total_measurement
		WHEN custom='Y' AND asis_dept_changed='Y' THEN dept_custom_PRINT_total_measurement
		END) AS PRINT_Total_Measurement,
		sc_planning_main_item_id, style_ccode_id, sc_asis_plan_PRINT_item_id, cat_custom_plan_PRINT_item_id,sc_custom_dept_plan_PRINT_item_id,
		custom, cat_custom_dept_changed,asis_dept_changed
		 from 
		(
			select 
			cat.*,
			sc_custom_dept_plan_PRINT_item_id,
			dept_custom_PRINT_total_length_metre,
			dept_custom_PRINT_total_width_inch,	
			dept_custom_PRINT_total_pcs,
			dept_custom_PRINT_total_measurement,
			dept_custom_PRINT_issue_min_date,
			dept_custom_PRINT_issue_max_date,
			dept_custom_PRINT_delivery_min_date,
			dept_custom_PRINT_delivery_max_date 
			from vw_notification_asis_cat_custom_PRINT cat
			 LEFT JOIN vw_notification_asis_dept_custom_PRINT dept 
			ON cat.transaction_id=dept.transaction_id 
			AND cat.cat_custom_plan_PRINT_item_id=dept.sc_custom_plan_PRINT_item_id
		) vw_notification_PRINT 
		order by category_planning_id
	) vw_req_print
	LEFT JOIN 
	(
	select transaction_id,
	sum(custom_requis.print_length) AS print_length,
	sum(custom_requis.print_width) AS print_width,
	sum(custom_requis.print_pcs) AS print_pcs,
	sum(custom_requis.print_total_measurement) AS print_total_measurement
	FROM 
	tracker_custom_requisition_print custom_requis, 
	tracker_requisition_print requis
	where custom_requis.print_requisition_id=requis.print_requisition_id
	group by transaction_id
	) req_print ON req_print.transaction_id=vw_req_print.transaction_id
) sub WHERE (PRINT_Total_Length_Metre<>0 OR PRINT_Total_Width_Inch<>0 OR PRINT_Total_Pcs<>0) AND PRINT_Total_Measurement<>0;
