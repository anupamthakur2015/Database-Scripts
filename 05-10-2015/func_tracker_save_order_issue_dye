
CREATE OR REPLACE FUNCTION func_tracker_save_order_issue_dye(
    IN arr_order_id integer[],
    OUT output_msg text,
    OUT id integer)
  RETURNS record AS
$BODY$
BEGIN   
					
	UPDATE tracker_orders_dye SET issued='Y', issued_date=current_timestamp
	 WHERE order_id IN(select UNNEST(arr_order_id::integer[]));

END
$BODY$
  LANGUAGE plpgsql;
